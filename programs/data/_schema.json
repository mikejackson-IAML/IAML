{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IAML Program Page Data Schema",
  "description": "Schema for program-specific data used to generate IAML program pages from the template",
  "type": "object",
  "required": ["programName", "programSlug", "registrationUrl", "meta", "hero", "testimonials", "curriculum", "faculty", "faq"],
  "properties": {
    "programName": {
      "type": "string",
      "description": "Full program name as it appears in Airtable (e.g., 'Certificate in Employee Relations Law')"
    },
    "programSlug": {
      "type": "string",
      "description": "URL-friendly slug (e.g., 'employee-relations-law')"
    },
    "registrationUrl": {
      "type": "string",
      "format": "uri",
      "description": "External registration URL for this program"
    },
    "meta": {
      "type": "object",
      "required": ["title", "description", "keywords"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Page title for browser tab and SEO (e.g., 'Certificate in Employee Relations Law - IAML')"
        },
        "description": {
          "type": "string",
          "description": "Meta description for SEO (150-160 characters recommended)"
        },
        "keywords": {
          "type": "string",
          "description": "Comma-separated keywords for SEO"
        },
        "ogImage": {
          "type": "string",
          "format": "uri",
          "description": "Open Graph image URL for social sharing"
        }
      }
    },
    "hero": {
      "type": "object",
      "required": ["title", "description", "price"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Hero title (can include <br> for line breaks)"
        },
        "description": {
          "type": "string",
          "description": "Hero description paragraph"
        },
        "price": {
          "type": "number",
          "description": "Full program enrollment fee (e.g., 2375)"
        },
        "deliveryOptions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["In Person", "Virtual", "On Demand"]
          },
          "description": "Available delivery formats"
        },
        "duration": {
          "type": "string",
          "description": "Program duration (e.g., '4½ days', '3 days')"
        }
      }
    },
    "testimonials": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["quote", "name"],
        "properties": {
          "quote": {
            "type": "string",
            "description": "Testimonial text (without surrounding quotes)"
          },
          "name": {
            "type": "string",
            "description": "Person's full name"
          },
          "title": {
            "type": "string",
            "description": "Job title"
          },
          "company": {
            "type": "string",
            "description": "Company name"
          }
        }
      },
      "description": "Array of testimonial objects (typically 40-50)"
    },
    "contentSection": {
      "type": "object",
      "description": "Content section next to testimonials",
      "properties": {
        "headline": {
          "type": "string",
          "description": "H2 headline (e.g., 'Build Employment Law Expertise That Protects and Advances')"
        },
        "description": {
          "type": "string",
          "description": "Description paragraph (can include HTML spans for emphasis)"
        },
        "benefits": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of benefit bullet points (can include HTML)"
        }
      }
    },
    "curriculum": {
      "type": "object",
      "required": ["header", "blocks"],
      "properties": {
        "header": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "Section title (e.g., 'What You'll Master in 4½ Days')"
            },
            "description": {
              "type": "string",
              "description": "Section description"
            }
          }
        },
        "blocks": {
          "type": "array",
          "minItems": 1,
          "maxItems": 3,
          "items": {
            "type": "object",
            "required": ["id", "label", "title", "description", "price", "competencyGroups"],
            "properties": {
              "id": {
                "type": "string",
                "description": "Block ID (e.g., 'block1', 'block2', 'block3')"
              },
              "label": {
                "type": "string",
                "description": "Block label (e.g., 'Block I', 'Block II')"
              },
              "title": {
                "type": "string",
                "description": "Block title (e.g., 'Comprehensive Labor Relations')"
              },
              "description": {
                "type": "string",
                "description": "Block description"
              },
              "price": {
                "type": "number",
                "description": "Individual block price"
              },
              "availability": {
                "type": "string",
                "description": "Availability note (e.g., 'Available individually')"
              },
              "competencyGroups": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["title", "description", "skills"],
                  "properties": {
                    "title": {
                      "type": "string",
                      "description": "Competency group title"
                    },
                    "description": {
                      "type": "string",
                      "description": "Brief description"
                    },
                    "skills": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": ["level", "title", "description"],
                        "properties": {
                          "level": {
                            "type": "string",
                            "enum": ["Foundation", "Advanced", "Expert"],
                            "description": "Skill level"
                          },
                          "title": {
                            "type": "string",
                            "description": "Skill title"
                          },
                          "description": {
                            "type": "string",
                            "description": "Skill description"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "stepTabs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["target", "number", "label"],
            "properties": {
              "target": {
                "type": "string",
                "description": "Block ID this tab links to"
              },
              "number": {
                "type": "string",
                "description": "Roman numeral (e.g., 'I', 'II', 'III')"
              },
              "label": {
                "type": "string",
                "description": "Tab label"
              }
            }
          }
        }
      }
    },
    "faculty": {
      "type": "array",
      "minItems": 1,
      "maxItems": 12,
      "items": {
        "type": "object",
        "required": ["name", "title", "imageUrl", "bio"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Full name with credentials (e.g., 'Ray Deeny, Esq.')"
          },
          "title": {
            "type": "string",
            "description": "Professional title and organization"
          },
          "imageUrl": {
            "type": "string",
            "format": "uri",
            "description": "Profile image URL (Google Cloud Storage)"
          },
          "bio": {
            "type": "string",
            "description": "3-4 sentence biography"
          },
          "bioLink": {
            "type": "string",
            "format": "uri",
            "description": "Link to full bio page"
          },
          "firstName": {
            "type": "string",
            "description": "First name for 'Read [Name]'s full bio' link"
          }
        }
      },
      "description": "Array of faculty members (1-12)"
    },
    "facultySection": {
      "type": "object",
      "properties": {
        "headline": {
          "type": "string",
          "default": "Practicing Attorneys, Not Academics",
          "description": "Faculty section headline"
        },
        "subtitle": {
          "type": "string",
          "description": "Faculty section subtitle"
        }
      }
    },
    "faq": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["question", "answer"],
        "properties": {
          "question": {
            "type": "string",
            "description": "FAQ question text"
          },
          "answer": {
            "type": "string",
            "description": "FAQ answer (can include HTML)"
          }
        }
      },
      "description": "Array of FAQ items (typically 8-12)"
    },
    "benefits": {
      "type": "object",
      "description": "Benefit steps section customization",
      "properties": {
        "creditCount": {
          "type": "string",
          "description": "Credit count text (e.g., '35.75 SHRM/HRCI/CLE')"
        },
        "updatePeriod": {
          "type": "string",
          "default": "12 months",
          "description": "Update period"
        },
        "alumniDiscount": {
          "type": "string",
          "default": "$300-$500",
          "description": "Alumni discount range"
        }
      }
    },
    "cta": {
      "type": "object",
      "description": "Call-to-action section customization",
      "properties": {
        "midPageHeadline": {
          "type": "string",
          "description": "Mid-page CTA headline"
        },
        "finalHeadline": {
          "type": "string",
          "description": "Final CTA headline"
        }
      }
    }
  }
}
