{
  "name": "iaml-qa",
  "version": "1.0.0",
  "description": "QA automation for IAML website",
  "private": true,
  "scripts": {
    "qa:registration": "npx playwright test qa/tests/registration.spec.js",
    "qa:smoke": "npx playwright test qa/tests/smoke.spec.js",
    "qa:visual": "npx playwright test visual-regression",
    "qa:visual:update": "npx playwright test visual-regression --update-snapshots",
    "qa:full": "npx playwright test",
    "qa:report": "npx playwright show-report",
    "css:audit": "node qa/scripts/css-audit.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  }
}
